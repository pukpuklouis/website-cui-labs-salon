---
// src/pages/stylists.astro
import Layout from '../layouts/Layout.astro';
import StylistBio from '../components/StylistBio.astro'; // Import the enhanced component
import CallToAction from '../components/calltoaction.astro';
import { getCollection } from 'astro:content';
import SplitText from '../components/ui/SplitText.astro';

// Navigation properties
export const navlinkData = {
  navTitle: '設計師',
  navOrder: 3,
  navVisibility: 'all'
};

// SEO Metadata
const title = "髮藝造型師 | 萃CUI Labs Salon";
// descripbe service in zh-tw
const description = "認識萃CUI Labs Salon的優秀髮型師團隊。探索他們的專業領域，預約您的下一次美髮體驗";

const stylistsData = (await getCollection('stylistbio'))[0].data;
---

<Layout title={title} description={description}>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-0 mb-12 mt-56">
      <div class="flex flex-col md:flex-row justify-between items-center">
      <SplitText 
      text={`技藝精湛
      充滿熱忱的髮藝團隊`} 
      splitBy="words" 
      tag="h1" 
      animationType="fadeUp" 
      className="font-sans font-bold text-4xl text-left md:text-left md:text-5xl lg:text-6xl mb-4  text-gray-900" 
      options={{ duration: 0.7, stagger: 0.08, delay: 0.3 }} 
      inView={true} 
      />
      <SplitText 
      text="Our Talented Team" 
      splitBy="chars" 
      tag="div" 
      animationType="blurColorIn" 
      className="text-4xl md:text-3xl lg:text-3xl font-soligant text-left md:text-right text-gray-900/40 mb-8" 
      options={{ duration: 0.7, stagger: 0.08, delay: 0.3 }} 
      inView={true} 
      />
      </div>

      <!-- Magazine-style Bento Grid Layout -->
      <section class="hidden lg:grid lg:grid-cols-12 lg:grid-rows-2 gap-8 mb-20">
        <!-- Introduction Text Block -->
        <div class="lg:col-span-4 h-fit flex flex-col justify-center p-6 bg-beige/20 rounded-2xl">
          <h2 class="font-sans text-4xl font-bold text-charcoal mb-4">髮藝即藝術</h2>
          <p class="text-charcoal/80 leading-relaxed">
            您的髮型都由我們經驗豐富、充滿熱忱的髮藝師團隊傾力塑造。以精湛的技藝與敏銳的美學，深入了解您的個人特質，量身訂製能完美展現您自然之美的專屬造型。每一位髮藝師，擁有其獨特的專業領域與美學視野，為您打造能提升自信、綻放光采的個人化造型
          </p>
        </div>
        
        <!-- First Row Stylists -->
        <div class="flex flex-row gap-8 lg:col-span-6">
          {stylistsData[0] && <StylistBio stylist={stylistsData[0]} />}
          {stylistsData[1] && <StylistBio stylist={stylistsData[1]} />}
        </div>
        
        <!-- Second Row Stylists -->
        <div class="flex flex-row gap-8 lg:col-span-8 lg:col-start-3">
          {stylistsData[2] && <StylistBio stylist={stylistsData[2]} />}
          {stylistsData[3] && <StylistBio stylist={stylistsData[3]} />}
          {stylistsData[4] && <StylistBio stylist={stylistsData[4]} />}
        </div>
         <!-- third Row Stylists -->
         <div class="flex flex-row gap-8 lg:col-span-8 lg:col-start-3">
           {stylistsData[5] && <StylistBio stylist={stylistsData[5]} />}
          {stylistsData[6] && <StylistBio stylist={stylistsData[6]} />}
          {stylistsData[7] && <StylistBio stylist={stylistsData[7]} />}
        </div>
          <!-- fourth Row Stylists -->
         <div class="flex flex-row gap-8 lg:col-span-8 lg:col-start-3">
          {stylistsData[8] && <StylistBio stylist={stylistsData[8]} />}
         {stylistsData[9] && <StylistBio stylist={stylistsData[9]} />}
         {stylistsData[10] && <StylistBio stylist={stylistsData[10]} />}
        </div>
      </section>
      <section class="mobile flex flex-col lg:hidden">
        <div class="flex flex-col md:order-last justify-center p-8 bg-beige/20 rounded-2xl">
          <h2 class="font-sans text-4xl font-bold text-charcoal mb-4">髮藝即藝術</h2>
          <p class="text-charcoal/80 leading-relaxed">
            您的風格都由我們經驗豐富、充滿熱忱的髮藝師團隊傾力塑造。以精湛的技藝與敏銳的美學，深入了解您的個人特質，量身訂製能完美展現您自然之美的專屬造型。每位髮藝師，擁有獨特專業領域與美學視野，為您打造提升自信、綻放光采的造型
          </p>
        </div>
        <div class="flex flex-col gap-8 md:flex-row md:flex-wrap md:justify-center md:gap-8 items-center mt-8 mb-16">
          {stylistsData.map((stylist) => (
            <StylistBio stylist={stylist}/>
          ))}
        </div>
      </section>
    </div>
    <CallToAction />
</Layout>