---
// src/pages/booking.astro
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const SocialPlatformIcons = (await getCollection('SocialPlatformIcons'))[0].data;
// Navigation properties
export const navlinkData = {
  navTitle: '專屬預約',
  navOrder: 6,
  navVisibility: 'all',
  href: 'https://line.me/R/ti/p/@572kuqqj'
};
// get line icon
const lineIcon = SocialPlatformIcons.line;
const lineUrl = 'https://line.me/R/ti/p/@572kuqqj';
// SEO Metadata
const title = "專屬預約 | 萃CUI Labs Salon";
const description = "視髮藝為藝術，為您精雕細琢自信之美。體驗專業髮藝師的匠心技藝，享受身心靈的寧靜蛻變 預約專屬造型師";
---

<Layout title={title} description={description}>
  <section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-0 mb-12 mt-56">
    <div class="flex flex-col items-center justify-center text-center">
      <h1 class="text-5xl md:text-5xl font-bold mb-8 text-gray-800">專屬預約</h1>
      <p class="text-xl text-balance text-gray-600 max-w-2xl mb-12">讓萃Cui Labs的專業團隊為您打造專屬風格，點擊下方按鈕，立即預約您的專屬造型師</p>

      <!-- Stylish booking button -->
      <a
        href={lineUrl}
        target="_blank"
        rel="noopener noreferrer"
        class="group relative inline-flex items-center justify-center px-8 py-4 overflow-hidden font-medium text-white bg-gray-800 rounded-full shadow-md transition-all duration-300 ease-out hover:bg-gray-700 hover:shadow-lg hover:-translate-y-1 mb-16"
        id="booking-button"
      >
        <span class="relative flex items-center gap-2 text-lg font-semibold">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-green-600" fill="none" viewBox="0 0 24 24" stroke="hidden" aria-hidden="true">
            <path d={lineIcon.path} fill="currentColor" />
          </svg>
          預約專屬造型師
        </span>
        <span class="absolute right-0 w-8 h-32 -mt-12 transition-all duration-1000 transform translate-x-12 bg-gray-100 opacity-10 rotate-12 group-hover:-translate-x-40 ease"></span>
      </a>

      <div class="mt-8 text-gray-500 text-sm text-left font-sans font-bold text-balance">
        <p>營業時間: 週三至週六 11:30-20:30</p>
        <p>週末營業: 週日 11:30-17:30</p>
        <p>電話: 02-2758-0067</p>
      </div>
    </div>
  </section>
</Layout>
