---
import Calltoaction from '@/components/calltoaction.astro';
import Layout from '../layouts/Layout.astro';
import SplitText from '@/components/ui/SplitText.astro';
import { Image } from 'astro:assets';

// Navigation properties - hide this page from navigation
export const navlinkData = {
  navTitle: '地圖',
  navOrder: 5,
  navVisibility: 'all'
};

// SEO Metadata
const title = "地圖 | 萃CUI Labs Salon";
const description = "視髮藝為藝術，為您精雕細琢自信之美。體驗專業髮藝師的匠心技藝，享受身心靈的寧靜蛻變";

// Location information
const salonName = "萃CUI Labs";
const address = {
  street: "仁愛路四段436號",
  district: "信義區",
  city: "台北市",
  country: "台灣",
  postalCode: "110"
};
const contact = {
  phone: "+886 2 2758 0067",
  email: "info@cuilabs-salon.com",
  hours: "週三~週六 11:30 AM - 8:00 PM",
  extraHours: "週日 11:30 AM - 5:30 PM",
  mapEmbedUrl: "https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3614.9028971725484!2d121.55825859999999!3d25.0373692!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3442abc86c9de6bf%3A0x4c7c2ea47ef8539d!2z6JCDQ1VJIFNBTE9O!5e0!3m2!1sen!2stw!4v1746034801379!5m2!1sen!2stw"
};
---

<Layout title={title} description={description}>
   <section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-0 mb-12 mt-56"> 
    <div class="flex flex-row items-center gap-2">
      <Image  src="/logo/cui-logo-zh.svg" width={40} height={40} alt="Salon Address" />
      <Image  src="/logo/Cui-logo-grey.svg" width={120} height={45} alt="Salon Address" />
    </div>
    <SplitText 
    text={`haven of beauty`}
    splitBy="chars"
    tag="h1"
    animationType="blurColorIn"
    className="text-4xl font-soligant uppercase mb-8"
    options={{ duration: 0.7, stagger: 0.08, delay: 0.3 }} 
    inView={true} 
    inViewAmount={0.1}
    />
    <SplitText 
    text={`一方靜謐空間，開啟您的美麗蛻變之旅`}
    splitBy="chars"
    tag="div"
    animationType="blurColorIn"
    className="text-xl font-bold font-sans mb-8"
    options={{ duration: 0.7, stagger: 0.08, delay: 0.3 }} 
    inView={true} 
    inViewAmount={0.1}
    />
    <div class="grid grid-cols-1 md:grid-cols-5 gap-8">
      <!-- Map on the left (2/3 width on desktop) -->
      <div class="md:col-span-3 bg-gray-200 p-4 md:p-8 rounded-2xl text-center overflow-hidden">
        <div class="responsive-map-container w-full h-full">
          <iframe src={contact.mapEmbedUrl} width="100%" height="100%" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
        </div>
      </div>
      
      <!-- Address info on the right (1/3 width on desktop) -->
      <div class="md:col-span-2 bg-gray-50 p-6 rounded-lg shadow-md">
        <h2 class="text-2xl font-bold mb-4 text-gray-800">地址</h2>
        <p class="text-gray-700 mb-2 font-semibold">{salonName}</p>
        <p class="text-gray-700 ">{address.street}</p>
        <p class="text-gray-700 ">{address.district}, {address.city}</p>
        <p class="text-gray-700  mb-6">{address.country} {address.postalCode}</p>
        
        <h3 class="text-xl font-bold mb-3 text-gray-800">聯絡方式</h3>
        <p class="text-gray-700  mb-2">
          <span class="font-sans font-bold">電話:</span> 
          <a href={`tel:${contact.phone.replace(/\s+/g, '')}`}>{contact.phone}</a>
        </p>
        <p class="text-gray-700 mb-2">
          <span class="font-sans font-bold">Email:</span> {contact.email}
        </p>
        <p class="mb-2">
          <div class="flex flex-row gap-2">
            <span class="text-gray-800 font-sans font-bold">營業時間:</span>
            <div class="flex flex-col gap-1 text-gray-700">
              <p>{contact.hours}</p>
              <p>{contact.extraHours}</p>
            </div>
          </div>
        </p>
        <h3 class="text-xl font-bold mb-3 text-gray-800">交通方式</h3>
        <p class="text-gray-700  mb-2">
          <span class="font-sans font-bold">捷運:</span> 
          <a href="https://www.google.com/maps/dir//仁愛路四段436號/@25.0373692,121.5582586,17z/data=!3m1!4b1!4m6!3m5!1s0x3442abc86c9de6bf:0x4c7c2ea47ef8539d!8m2!3d25.0373692!4d121.5582586!16s%2Fm%2F01q966?entry=ttu" target="_blank" rel="noopener noreferrer">國父紀念館站 3號出口</a>
        </p>
        <p class="text-gray-700  mb-2">
          <span class="font-sans font-bold">公車:</span> 
          <span>仁愛光復路口</span>
        </p>
          <span class="font-sans font-bold">公車路線：</span>
          <div class="flex flex-row gap-2 mb-2">
            <p>261</p>
            <p>263</p>
            <p>270</p>
            <p>311</p>
            <p>621</p>
            <p>651</p>
            <p>665</p>
            <p>37</p>
            <p>939</p>
            <p>1211</p>
          </div>
          <h3 class="text-xl font-bold mb-3 text-gray-800">附近停車場:</h3>
          <div class="flex flex-col gap-2 mb-2">
            <a href="https://www.google.com/maps/dir//Taipei+City,+Xinyi+District,+Lane+512,+Section+4th,+Ren'ai+Road,+%E5%B0%8D%E9%9D%A2%E7%A9%BA%E5%9C%B0%E5%8F%B0%E5%8C%97%E8%88%88%E9%9A%86%E7%AB%99%E5%81%9C%E8%BB%8A%E5%A0%B4/@25.0370388,121.5199655,13z/data=!4m8!4m7!1m0!1m5!1m1!1s0x3442abe3aae06d23:0x467012718872e935!2m2!1d121.5611652!2d25.0370445?entry=ttu&g_ep=EgoyMDI1MDUxMi4wIKXMDSoASAFQAw%3D%3D" 
            target="_blank" 
            rel="noopener noreferrer" 
            class="text-gray-700 no-underline">
              台北興隆站停車場
            </a>
            <a href="https://www.google.com/maps/dir//No.+492%E8%99%9F,+Guangfu+S+Rd,+Da%E2%80%99an+District,+Taipei+City,+106/@25.0350253,121.5572562,17z/data=!4m18!1m8!3m7!1s0x3442abc9a6b668bd:0xdf191bed5da88eb!2sNo.+492%E8%99%9F,+Guangfu+S+Rd,+Da%E2%80%99an+District,+Taipei+City,+106!3b1!8m2!3d25.0350253!4d121.5572562!16s%2Fg%2F11sx41wtcd!4m8!1m0!1m5!1m1!1s0x3442abc9a6b668bd:0xdf191bed5da88eb!2m2!1d121.5572562!2d25.0350253!3e4?entry=ttu&g_ep=EgoyMDI1MDUxMi4wIKXMDSoASAFQAw%3D%3D" 
            target="_blank" 
            rel="noopener noreferrer" 
            class="text-gray-700 no-underline">
              光南信義平面停車場
            </a>
            <a href="https://www.google.com/maps/dir//Pei+Chen+Parking,+Da%E2%80%99an+District,+Taipei+City,+106/@25.0363964,121.5562504,19z/data=!4m18!1m8!3m7!1s0x3442ab8c9dcb3473:0x3b4b573614e870be!2sPei+Chen+Parking!8m2!3d25.0361318!4d121.5569556!15sCgdwYXJraW5nkgEOcGFya2luZ19nYXJhZ2WqATsQASoLIgdwYXJraW5nKAAyHRABIhkFMkavGFkWxi2gMh-ARNGIY1as5aWEjsRhMgsQAiIHcGFya2luZ-ABAA!16s%2Fg%2F11fhnk6qqc!4m8!1m0!1m5!1m1!1s0x3442ab8c9dcb3473:0x3b4b573614e870be!2m2!1d121.5569698!2d25.0361316!3e4?entry=ttu&g_ep=EgoyMDI1MDUxMi4wIKXMDSoASAFQAw%3D%3D" 
            target="_blank" 
            rel="noopener noreferrer" 
            class="text-gray-700 no-underline">
              培宸停車場
            </a>
          </div>
      </div>
    </div>
  </section>
  <Calltoaction className="max-w-7xl mx-auto"/>
</Layout>
