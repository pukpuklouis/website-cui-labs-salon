---
import Calltoaction from '@/components/calltoaction.astro';
import Layout from '../layouts/Layout.astro';
import SplitText from '@/components/ui/SplitText.astro';
import { Image } from 'astro:assets';

// Navigation properties - hide this page from navigation
export const navlinkData = {
  navTitle: '地圖',
  navOrder: 5,
  navVisibility: 'all'
};

// Page metadata
const title = "Maps - CUI Labs Salon";
const description = "Find our salon location and directions.";

// Location information
const salonName = "萃CUI Labs";
const address = {
  street: "仁愛路四段436號",
  district: "信義區",
  city: "台北市",
  country: "台灣",
  postalCode: "110"
};
const contact = {
  phone: "+886 2 2758 0067",
  email: "info@cuilabs-salon.com",
  hours: "Wed-Sat 11:30 AM - 8:00 PM"
};
const mapEmbedUrl = "https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3614.9028971725484!2d121.55825859999999!3d25.0373692!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3442abc86c9de6bf%3A0x4c7c2ea47ef8539d!2z6JCDQ1VJIFNBTE9O!5e0!3m2!1sen!2stw!4v1746034801379!5m2!1sen!2stw";
---

<Layout title={title} description={description}>
   <section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-0 mb-12 mt-56"> 
    <div class="flex flex-row items-center gap-2">
      <Image  src="/logo/cui-logo-zh.svg" width={40} height={40} alt="Salon Address" />
      <Image  src="/logo/Cui-logo-grey.svg" width={120} height={45} alt="Salon Address" />
    </div>
    <SplitText 
    text={`haven of beauty`}
    splitBy="chars"
    tag="h1"
    animationType="blurColorIn"
    className="text-4xl font-soligant uppercase mb-8"
    options={{ duration: 0.7, stagger: 0.08, delay: 0.3 }} 
    inView={true} 
    inViewAmount={0.1}
    />
    <SplitText 
    text={`一方靜謐空間，開啟您的美麗蛻變之旅`}
    splitBy="chars"
    tag="div"
    animationType="blurColorIn"
    className="text-xl font-bold font-sans mb-8"
    options={{ duration: 0.7, stagger: 0.08, delay: 0.3 }} 
    inView={true} 
    inViewAmount={0.1}
    />
    <div class="grid grid-cols-1 md:grid-cols-5 gap-8">
      <!-- Map on the left (2/3 width on desktop) -->
      <div class="md:col-span-3 bg-gray-200 p-4 md:p-8 rounded-2xl text-center overflow-hidden">
        <div class="responsive-map-container w-full h-full">
          <iframe src={mapEmbedUrl} width="100%" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
        </div>
      </div>
      
      <!-- Address info on the right (1/3 width on desktop) -->
      <div class="md:col-span-2 bg-gray-50 p-6 rounded-lg shadow-md">
        <h2 class="text-2xl font-bold mb-4 text-gray-800 dark:text-white">地址</h2>
        <p class="text-gray-700 mb-2 font-semibold">{salonName}</p>
        <p class="text-gray-700 ">{address.street}</p>
        <p class="text-gray-700 ">{address.district}, {address.city}</p>
        <p class="text-gray-700  mb-6">{address.country} {address.postalCode}</p>
        
        <h3 class="text-xl font-bold mb-3 text-gray-800">聯絡方式</h3>
        <p class="text-gray-700  mb-2">
          <span class="font-sans font-bold">電話:</span> {contact.phone}
        </p>
        <p class="text-gray-700  mb-2">
          <span class="font-sans font-bold">Email:</span> {contact.email}
        </p>
        <p class="text-gray-700  mb-6">
          <span class="font-sans font-bold">營業時間:</span> {contact.hours}
        </p>
        
        <a href={`tel:${contact.phone.replace(/\s+/g, '')}`} class="inline-block bg-primary-600 hover:bg-primary-700 text-white font-medium py-2 px-4 rounded-md transition-colors">
          Call Now
        </a>
      </div>
    </div>
  </section>
  <Calltoaction className="max-w-7xl mx-auto"/>
</Layout>
