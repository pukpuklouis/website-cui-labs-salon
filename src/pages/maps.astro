---
import Layout from '../layouts/Layout.astro';

// Navigation properties - hide this page from navigation
export const navlinkData = {
  navTitle: '地圖',
  navOrder: 5,
  navVisibility: 'all'
};

// Page metadata
const title = "Maps - CUI Labs Salon";
const description = "Find our salon location and directions.";

// Location information
const salonName = "CUI Labs Salon";
const address = {
  street: "No. 123, Section 4, Zhongxiao East Road",
  district: "Da'an District",
  city: "Taipei City",
  country: "Taiwan",
  postalCode: "106"
};
const contact = {
  phone: "+886 2 1234 5678",
  email: "info@cuilabs-salon.com",
  hours: "Tue-Sun 10:00 AM - 8:00 PM"
};
const mapEmbedUrl = "https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3614.9028971725484!2d121.55825859999999!3d25.0373692!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3442abc86c9de6bf%3A0x4c7c2ea47ef8539d!2z6JCDQ1VJIFNBTE9O!5e0!3m2!1sen!2stw!4v1746034801379!5m2!1sen!2stw";
---

<Layout title={title} description={description}>
    <h1 class="text-4xl font-bold mb-8">Maps</h1>
    <p class="mb-8">Visit us at our convenient location in Taipei. Our salon is easily accessible and we look forward to welcoming you!</p>
    
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <!-- Map on the left (2/3 width on desktop) -->
      <div class="md:col-span-2 bg-gray-200 p-4 md:p-8 rounded-lg text-center overflow-hidden">
        <div class="responsive-map-container w-full h-full">
          <iframe src={mapEmbedUrl} width="100%" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
        </div>
      </div>
      
      <!-- Address info on the right (1/3 width on desktop) -->
      <div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-md">
        <h2 class="text-2xl font-bold mb-4 text-gray-800 dark:text-white">Location</h2>
        <p class="text-gray-700 dark:text-gray-300 mb-2 font-semibold">{salonName}</p>
        <p class="text-gray-700 dark:text-gray-300">{address.street}</p>
        <p class="text-gray-700 dark:text-gray-300">{address.district}, {address.city}</p>
        <p class="text-gray-700 dark:text-gray-300 mb-6">{address.country} {address.postalCode}</p>
        
        <h3 class="text-xl font-bold mb-3 text-gray-800 dark:text-white">Contact</h3>
        <p class="text-gray-700 dark:text-gray-300 mb-2">
          <span class="font-semibold">Phone:</span> {contact.phone}
        </p>
        <p class="text-gray-700 dark:text-gray-300 mb-2">
          <span class="font-semibold">Email:</span> {contact.email}
        </p>
        <p class="text-gray-700 dark:text-gray-300 mb-6">
          <span class="font-semibold">Hours:</span> {contact.hours}
        </p>
        
        <a href={`tel:${contact.phone.replace(/\s+/g, '')}`} class="inline-block bg-primary-600 hover:bg-primary-700 text-white font-medium py-2 px-4 rounded-md transition-colors">
          Call Now
        </a>
      </div>
    </div>
</Layout>
