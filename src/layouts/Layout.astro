---
import { SEO } from 'astro-seo';
import Nav from '../components/nav.astro'; // Import the Nav component
import Footer from '../components/Footer.astro'; // Import the Footer component
// import { ViewTransitions } from 'astro:transitions'; // Optional: Import if using View Transitions
import '../styles/global.css'; // Import global styles
// import {  ClientRouter } from 'astro:transitions';
// Define props for title and description, allowing pages to override defaults
interface Props {
	title?: string;
	description?: string;
}

const { 
	title = "CUI Labs Salon", 
	description = "Default description for CUI Labs Salon website." 
} = Astro.props;
---

<!DOCTYPE html>
<html lang="zh-TW">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favico-cui.svg" />
		<meta name="generator" content={Astro.generator} />
		
		{/* Astro SEO Integration */}
		{/* Add other SEO props as needed, e.g., openGraph, twitter. See astro-seo documentation for options. */}
		<SEO
			title={title}
			description={description}
		/>
		
		<title>{title}</title> {/* Basic title fallback */}
		
		{/* View Transitions (Optional, can be added later if needed) */}
		{/* <ViewTransitions /> */}

		{/* Global Styles (Tailwind is applied via integration) */}
		{/* <link rel="stylesheet" href="/styles/global.css"> */}
	</head>
	<body class="container bg-gray-50 text-gray-800 flex flex-col">
		
		{/* Navigation Component */}
		<Nav/> {/* Add the Nav component */}
		
		{/* Main content slot */}
		<main class="container"> 
			<slot />
		</main>
		
		{/* Footer Component */}
		<Footer/>
	</body>
</html>