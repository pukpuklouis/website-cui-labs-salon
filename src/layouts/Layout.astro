---
import { SEO } from 'astro-seo';
import Nav from '../components/nav.astro'; // Import the Nav component
import Footer from '../components/Footer.astro'; // Import the Footer component
// import { ViewTransitions } from 'astro:transitions'; // Optional: Import if using View Transitions
import '../styles/global.css'; // Import global styles
// import {  ClientRouter } from 'astro:transitions';
import LiquidGlassContainer from '../components/LiquidGlassContainer.astro';
// Define props for title and description, allowing pages to override defaults
interface Props {
	title?: string;
	description?: string;
}

const { 
	title = "CUI Labs Salon", 
	description = "Default description for CUI Labs Salon website." 
} = Astro.props;
---

<!DOCTYPE html>
<html lang="zh-TW">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favico-cui.svg" />
		<meta name="generator" content={Astro.generator} />
		
		{/* Astro SEO Integration */}
		{/* Add other SEO props as needed, e.g., openGraph, twitter. See astro-seo documentation for options. */}
		<SEO
			title={title}
			description={description}
			openGraph={{
				basic: {
					title: title,
					type: 'website',
					image: Astro.url + 'og-image.png',
					url: Astro.url,
				},
				optional: {
				siteName: '萃CUI Labs Salon',
				description: description,
				},
			}}
			twitter={{		
				card: 'summary_large_image',
				site: 'https://www.labcui.com',
				title: title,
				description: description,
				image: Astro.url + 'og-image.png',
			}}
		/>
		
		<title>{title}</title> {/* Basic title fallback */}
		
		{/* View Transitions (Optional, can be added later if needed) */}
		{/* <ViewTransitions /> */}

		{/* Global Styles (Tailwind is applied via integration) */}
		{/* <link rel="stylesheet" href="/styles/global.css"> */}
	</head>
	<body class=" bg-gray-50 text-gray-800 flex flex-col items-center m-0 overflow-x-hidden">
		<!-- <LiquidGlassContainer>
			<div class="flex flex-row items-center justify-center">
				<p class="text-2xl text-amber-950 font-bold p-2">menu1</p>
				<p class="text-2xl text-amber-950 font-bold p-2">menu2</p>
				<p class="text-2xl text-amber-950 font-bold p-2">menu3</p>
			</div>
		</LiquidGlassContainer> -->
		{/* Navigation Component */}
		<Nav/>
		{/* Main content slot */}
		<main class="container mx-4 md:mx-6 lg:mx-24"> 		
			<slot />
		</main>
			{/* Footer Component */}
		<Footer/>
	</body>
</html>