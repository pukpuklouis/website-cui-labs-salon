---
// src/components/StylistBio.astro
// Enhanced component to display a stylist's full profile information with CSS hover animation.
import { Image } from 'astro:assets';

// Define component props using TypeScript interface
interface Props {
  name: string;
  imageSrc: string; // Expecting a path relative to src/assets or public/
  imageAlt: string;
  specializations: string[]; // Array of strings for specializations
  bio: string; // Longer bio text
  contactInfo: string; // e.g., email or phone
  availability: string; // e.g., "Mon-Fri, 9am-5pm"
}

// Destructure props with default values for placeholders
const {
  name = 'Stylist Name',
  imageSrc = '/placeholder-stylist.jpg', // Default placeholder image path
  imageAlt = 'Portrait of Stylist',
  specializations = ['Hair Cutting', 'Coloring', 'Styling'],
  bio = 'Detailed bio highlighting experience, techniques, and personal style. Lorem ipsum dolor sit amet, consectetur adipiscing elit.',
  contactInfo = 'contact@example.com',
  availability = 'Available by appointment',
} = Astro.props;
---

<div class="stylist-card flex flex-col md:flex-row items-center md:items-start gap-6 p-6 border border-gray-200 rounded-lg shadow-md dark:border-gray-700 bg-white dark:bg-gray-800 transition-transform duration-200 ease-in-out hover:scale-105">
  <div class="flex-shrink-0">
    <Image
      src={imageSrc}
      alt={imageAlt}
      width={200}
      height={200}
      format="webp"
      loading="lazy"
      class="w-40 h-40 md:w-48 md:h-48 rounded-full object-cover shadow-lg"
    />
  </div>
  <div class="flex-grow text-center md:text-left">
    <h3 class="text-2xl font-bold mb-2 text-gray-900 dark:text-white">{name}</h3>
    <div class="mb-4">
      <h4 class="text-md font-semibold text-gray-700 dark:text-gray-300 mb-1">Specializations:</h4>
      <ul class="flex flex-wrap justify-center md:justify-start gap-2">
        {specializations.map((spec) => (
          <li class="bg-indigo-100 text-indigo-800 text-xs font-medium px-2.5 py-0.5 rounded dark:bg-indigo-900 dark:text-indigo-300">{spec}</li>
        ))}
      </ul>
    </div>
    <p class="text-base text-gray-600 dark:text-gray-400 mb-4">{bio}</p>
    <div class="text-sm text-gray-500 dark:text-gray-400 space-y-1">
      <p><span class="font-semibold">Contact:</span> {contactInfo}</p>
      <p><span class="font-semibold">Availability:</span> {availability}</p>
    </div>
  </div>
</div>

<script>
  // Import and run the animation setup script
  import { setupStylistAnimations } from '../scripts/stylist-animations.ts';
  setupStylistAnimations();
</script>