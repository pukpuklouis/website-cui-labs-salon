---
import { Image } from 'astro:assets';
import ParallaxImageWrapper from '../components/ui/ParallaxImage.astro';
---
<section id="feature-section-container" class="relative overflow-hidden px-4 md:px-8 lg:px-16 max-w-7xl mx-auto">
  <!-- Logo overlay -->
  <div class="absolute right-4 top-4 z-30 md:right-8 md:top-8">
    <Image src="/logo/cui-logo-zh.svg" alt="萃-logo" width={1080} height={1080} class="logo-animate aspect-square w-[120px] md:w-[180px] lg:w-[220px] object-contain opacity-90" />
  </div>

  <!-- Hero section with large typography -->
  <div class="relative mt-8 md:mt-16">
    <h1 id="hero-elevate-text" class="font-soligant opacity-0 text-[clamp(2rem,10vw,7rem)] uppercase font-light tracking-tight text-gray-900 leading-[0.9] mb-4">
      Awaken<br/>Your<br/>Signature<br/>Style
    </h1>
    <p id="hero-elevate-text-zh" class="font-light opacity-0 text-[clamp(1rem,4vw,2.5rem)] uppercase tracking-tight text-gray-700 leading-[1.1] mb-16">
      喚醒您的專屬風格
    </p>
    <!-- Main feature image with dramatic perspective -->
    <div class="relative">
      <ParallaxImageWrapper src="/Cui_Salon_img/Cui_Salon_IMG_016.avif" alt="Salon Enviroment" width={1920} height={1080} speed={0.7} direction="up" scale={1} class="w-[100%] h-auto aspect-video rounded-xl md:rounded-2xl"/>

      <div class="absolute bottom-8 left-8 right-8 z-10">
        <p class="text-xs md:text-sm uppercase tracking-widest text-white/80 font-light">Cui Salon 2025</p>
      </div>
    </div>
  </div>

  <!-- Editorial section with asymmetric layout -->
  <div id="hero-about-section" class="mt-16 md:mt-32 grid grid-cols-1 md:grid-cols-12 gap-24 md:gap-12">
    <div class="md:col-span-5 md:col-start-1 flex flex-col justify-center">
      <p id="hero-about-text1" class="opacity-0.1 translate-y-10 text-sm md:text-base font-bold uppercase tracking-widest text-neutral-500 mb-4">我們的髮藝美學</p>
      <p id="hero-about-text2" class="opacity-0.1 translate-y-10 font-sans font-thin text-lg text-pretty md:text-xl md:text-balance text-gray-600 leading-snug">
        用極簡美學與創新髮藝技法交互作用，由匠心打造出超越時尚的專屬髮型，展顯獨特的個人魅力
      </p>
    </div>
    <div class="md:col-span-6 md:col-start-7">
      <ParallaxImageWrapper src="/Cui_Salon_img/Cui_Salon_IMG_002.avif" alt="Salon Enviroment" width={1920} height={1080} speed={0.7} direction="left" scale={1} class="hero-about-image w-[100%] h-auto aspect-video rounded-xl md:rounded-2xl"/>
    </div>
  </div>

  <!-- New Arrivals with magazine-style grid -->
  <div id="hero-arrivals-section" class="mt-16 md:mt-32">
    <div id="hero-arrivals-title" class="flex flex-row items-end justify-between mb-16 md:mb-8">
      <h2 class="opacity-0.1 font-sans text-xl md:text-3xl uppercase tracking-wide text-gray-900 font-bold">靜謐的空間氛圍</h2>
      <p class="font-soligant text-right text-sm md:text-2xl tracking-wider text-gray-500 order-last">The Ambiance<br/> of Tranquil Transformation</p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-12 gap-6 md:gap-9">
      <div class="md:col-span-8">
        <ParallaxImageWrapper 
          src="/Cui_Salon_img/Cui_Salon_IMG_003.avif" 
          alt="Arrival 1" 
          id="hero-arrival-1"
          class="hero-arrival-item opacity-0 w-full h-auto aspect-[5/6] object-cover rounded-xl" 
          width={600} 
          height={800} 
          speed={0.7}
          direction="up"
          scale={1}
        />
      </div>
      <div class="md:col-span-4 flex flex-col justify-between gap-6 md:gap-6">
        <ParallaxImageWrapper 
          src="/Cui_Salon_img/Cui_Salon_IMG_004.avif" 
          id="hero-arrival-2" 
          alt="Arrival 2" 
          class="hero-arrival-item opacity-0 w-full h-auto aspect-[4/3] object-cover rounded-xl" 
          width={600} 
          height={600} 
          speed={0.3}
          direction="up"
          scale={1}
        />
        <ParallaxImageWrapper 
          id="hero-arrival-3" 
          src="/Cui_Salon_img/Cui_Salon_IMG_008.avif" 
          alt="Arrival 3" 
          class="hero-arrival-item opacity-0 w-full h-auto aspect-[4/3] object-cover rounded-xl" 
          width={600} 
          height={600} 
          speed={0.3}
          direction="up"
          scale={1}
        />
        <ParallaxImageWrapper 
          id="hero-arrival-4" 
          src="/Cui_Salon_img/Cui_Salon_IMG_001.avif" 
          alt="Arrival 4" 
          class="hero-arrival-item opacity-0 w-full h-auto aspect-[4/3] object-cover rounded-xl row-end-4" 
          width={600} 
          height={600} 
          speed={0.3}
          direction="up"
          scale={1}
        />
      </div>
    </div>
  </div>

  <!-- Bottom feature section with overlay -->
  <div id="hero-bottom-section" class="relative mt-6 md:mt-12 mb-8 md:mb-8">
    <div id="hero-bottom-image" class="relative opacity-0.1">
      <ParallaxImageWrapper 
        src="/Cui_Salon_img/Cui_Salon_IMG_005.avif" 
        alt="Bottom Image" 
        class="w-[100%] h-auto aspect-[5/3] rounded-xl" 
        width={1920} 
        height={1080} 
        speed={0.7}
        direction="up"
        scale={1.3}
      />
      <div class="absolute inset-0 flex items-center justify-center opacity-100 bg-black/40 rounded-xl">
        <div class="text-center">
          <p class="text-xs md:text-sm uppercase tracking-widest text-white/80 mb-2">Introducing</p>
          <h2 class="font-soligant text-2xl md:text-5xl lg:text-6xl text-gray-50">A Haven of Beauty and Serenity</h2>
        </div>
      </div>
    </div>
  </div>
</section>
<script src="../scripts/featureAnimate.ts"></script>
