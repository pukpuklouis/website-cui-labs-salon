---
import { Image } from 'astro:assets';
---
<section id="feature-section-container" class="relative overflow-hidden px-4 md:px-8 lg:px-16 max-w-[1920px] mx-auto">
  <!-- Logo overlay -->
  <div class="absolute right-4 top-4 z-30 md:right-8 md:top-8">
    <Image src="/logo/cui-logo-zh.svg" alt="萃-logo" width={1080} height={1080} class="aspect-square w-[120px] md:w-[180px] lg:w-[220px] object-contain opacity-80" />
  </div>

  <!-- Hero section with large typography -->
  <div class="relative mt-8 md:mt-16">
    <h1 id="hero-elevate-text" class="opacity-0 font-serif text-[clamp(2rem,10vw,7rem)] font-light tracking-tight text-neutral-900 leading-[0.9] mb-8">
      ELEVATE<br/>YOUR<br/>STYLE
    </h1>
    
    <!-- Main feature image with dramatic perspective -->
    <div class="relative">
      <Image 
        id="hero-main-image" 
        src="/Cui_Salon_img/Cui_Salon_IMG_016.avif" 
        alt="Main Model" 
        class="opacity-[0.01] scale-95 w-full h-auto rounded-xl md:rounded-2xl perspective-dramatic" 
        width={1920} 
        height={1080} 
        densities={[1, 2]}
        loading="eager"
        decoding="sync"
        fetchpriority="high"
        sizes="(max-width: 768px) 100vw, 1920px"
        quality={90}
      />
      <div class="absolute bottom-8 left-8 right-8 z-10">
        <p class="text-xs md:text-sm uppercase tracking-widest text-white/80 font-light">Spring Collection 2025</p>
      </div>
    </div>
  </div>

  <!-- Editorial section with asymmetric layout -->
  <div id="hero-about-section" class="mt-16 md:mt-32 grid grid-cols-1 md:grid-cols-12 gap-6 md:gap-12">
    <div class="md:col-span-5 md:col-start-1 flex flex-col justify-center">
      <p id="hero-about-text1" class="opacity-0.1 translate-y-10 text-sm md:text-base uppercase tracking-widest text-neutral-500 mb-4">Our Philosophy</p>
      <p id="hero-about-text2" class="opacity-0.1 translate-y-10 font-serif text-xl md:text-3xl text-neutral-900 leading-snug">
        Where minimalist aesthetics meet innovative design, creating a timeless expression of modern elegance.
      </p>
    </div>
    <div class="md:col-span-6 md:col-start-7">
      <Image 
        id="hero-about-image" 
        src="https://placehold.co/1200x800?text=About+Image" 
        alt="About Image" 
        class="opacity-0 scale-90 w-full h-auto rounded-xl" 
        width={1200} 
        height={800} 
        loading="eager"
        sizes="(max-width: 768px) 100vw, 1200px"
        quality={85}
      />
    </div>
  </div>

  <!-- New Arrivals with magazine-style grid -->
  <div id="hero-arrivals-section" class="mt-16 md:mt-32">
    <div class="flex items-end justify-between mb-8">
      <h2 id="hero-arrivals-title" class="opacity-0.1 translate-y-10 text-lg md:text-xl uppercase tracking-widest text-neutral-900 font-light">New Arrivals</h2>
      <p class="text-xs md:text-sm text-neutral-500">01 / 2025</p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-12 gap-4 md:gap-6">
      <div class="md:col-span-8">
        <Image 
          id="hero-arrival-1" 
          src="https://placehold.co/600x800?text=Arrival+1" 
          alt="Arrival 1" 
          class="hero-arrival-item opacity-0 translate-y-10 w-full h-auto aspect-[4/5] object-cover rounded-xl" 
          width={600} 
          height={800} 
          sizes="(max-width: 768px) 100vw, 600px"
          quality={80}
        />
      </div>
      <div class="md:col-span-4 flex flex-col gap-4 md:gap-6">
        <Image 
          id="hero-arrival-2" 
          src="https://placehold.co/600x800?text=Arrival+2" 
          alt="Arrival 2" 
          class="hero-arrival-item opacity-0 translate-y-10 w-full h-auto aspect-square object-cover rounded-xl" 
          width={600} 
          height={600} 
          sizes="(max-width: 768px) 100vw, 600px"
          quality={80}
        />
        <Image 
          id="hero-arrival-3" 
          src="https://placehold.co/600x800?text=Arrival+3" 
          alt="Arrival 3" 
          class="hero-arrival-item opacity-0 translate-y-10 w-full h-auto aspect-square object-cover rounded-xl" 
          width={600} 
          height={600} 
          sizes="(max-width: 768px) 100vw, 600px"
          quality={80}
        />
      </div>
    </div>
  </div>

  <!-- Bottom feature section with overlay -->
  <div id="hero-bottom-section" class="relative mt-16 md:mt-32 mb-16 md:mb-32">
    <Image 
      id="hero-bottom-image" 
      src="https://placehold.co/1920x1080?text=Bottom+Image" 
      alt="Bottom Image" 
      class="opacity-0 translate-y-10 w-full h-auto rounded-xl" 
      width={1920} 
      height={1080} 
      sizes="(max-width: 768px) 100vw, 1920px"
      quality={85}
    />
    <div id="hero-bottom-overlay" class="absolute inset-0 flex items-center justify-center opacity-0 bg-black/40 rounded-xl">
      <div class="text-center">
        <p class="text-xs md:text-sm uppercase tracking-widest text-white/80 mb-2">Introducing</p>
        <h2 class="font-serif text-2xl md:text-5xl lg:text-6xl font-light text-white">AETHER ATTIRE 2025</h2>
      </div>
    </div>
  </div>
</section>
<script src="../scripts/featureAnimate.ts"></script>
