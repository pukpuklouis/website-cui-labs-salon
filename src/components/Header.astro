---
// src/components/Header.astro
// Basic Header component with navigation links

const navLinks = [
  { name: 'Home', href: '/' },
  { name: 'Services', href: '/services' },
  { name: 'Stylists', href: '/stylists' },
  { name: 'Blog', href: '/blog' },
  { name: 'Booking', href: '/booking' },
];
---

<header class="bg-white shadow-md">
  <div class="container mx-auto px-4 py-4 flex flex-col md:flex-row items-center justify-between">
    <div class="text-2xl font-bold text-gray-800 mb-4 md:mb-0">
      <a href="/">CUI Labs Salon</a>
    </div>
    <nav>
      <ul class="flex flex-col md:flex-row space-y-2 md:space-y-0 md:space-x-6">
        {navLinks.map(link => (
          <li>
            <a 
              href={link.href} 
              class="text-gray-600 hover:text-gray-900 transition-colors duration-200"
              aria-current={Astro.url.pathname === link.href ? 'page' : false}
            >
              {link.name}
            </a>
          </li>
        ))}
      </ul>
    </nav>
  </div>
</header>