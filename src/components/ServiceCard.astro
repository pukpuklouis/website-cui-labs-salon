---
// src/components/ServiceCard.astro
// Basic component to display a featured service.

// Define component props using TypeScript interface
interface Props {
  imageUrl: string;
  name: string;
  description: string;
  price?: string; // Optional price
}

// Destructure props with default values if needed
const { imageUrl = '/placeholder-service.jpg', name = 'Service Name', description = 'Brief description of the service.', price } = Astro.props;
---

<article class="border border-gray-200 rounded-lg shadow-sm overflow-hidden dark:border-gray-700">
  <img src={imageUrl} alt={`Image for ${name}`} class="w-full h-48 object-cover" />
  <div class="p-4">
    <h3 class="text-lg font-semibold mb-2 text-gray-900 dark:text-white">{name}</h3>
    <p class="text-sm text-gray-600 dark:text-gray-400 {price ? 'mb-2' : 'mb-3'}">{description}</p>
    {price && (
      <p class="text-md font-medium text-gray-800 dark:text-gray-200">{price}</p>
    )}
  </div>
</article>