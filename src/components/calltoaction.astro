---
import { Image } from 'astro:assets';
export interface Props {
  title?: string;
  description?: string;
  buttonText?: string;
  buttonLink?: string;
  backgroundImage?: string;
  className?: string;
}

const { 
  title = "讓秀髮成為您自信魅力的完美註解", 
  description = "立即預約您的風格訂製體驗，來 萃Cui Labs展開一場美麗的蛻變",
  buttonText = "預約專屬風格",
  buttonLink = "https://line.me/R/ti/p/@572kuqqj",
  backgroundImage = "/Cui_Salon_img/Cui_Salon_IMG_010.avif",
  className = ""
} = Astro.props;
---

<section class={`relative rounded-2xl border-1 border-gray-200 overflow-hidden mx-4 py-20 my-12 ${className}`}>
  <!-- Background gradient overlay -->
  <div class="absolute inset-0 bg-gradient-to-r from-gray-700/90 to-gray-200/10 mix-blend-multiply z-10"></div>
  
  <!-- Optional background image -->
  {backgroundImage && (
    <div class="absolute inset-0 z-0 ">
      <Image 
        src={backgroundImage} 
        width={1920} 
        height={1080} 
        alt="call to action background" 
        class="w-full h-full object-cover object-center" 
        loading="lazy"
      />
    </div>
  )}
  
  <div class="relative z-20 max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid md:grid-cols-5 gap-8 items-center">
      <!-- Text content (spans 3 columns on medium screens and up) -->
      <div class="md:col-span-3 text-left">
        <h2 class="text-3xl md:text-4xl lg:text-5xl font-sans text-balance font-bold text-gray-50 leading-tight">
          {title}
        </h2>
        <div class="w-20 h-[1px] bg-gray-50/30 my-6"></div>
        <p class="text-lg md:text-xl text-gray-50 mb-8 max-w-2xl font-base font-sans text-balance leading-relaxed">
          {description}
        </p>
      </div>
      
      <!-- Call to action button (spans 2 columns on medium screens and up) -->
      <div class="md:col-span-2 flex justify-center md:justify-end">
        <a 
          href={buttonLink} 
          class="group relative inline-flex items-center justify-center px-8 py-4 overflow-hidden font-medium text-primary-600 bg-gray-50 rounded-2xl shadow-md transition-all duration-300 ease-out hover:bg-white/90 hover:shadow-lg hover:-translate-y-1"
          target="_blank"
          rel="noopener noreferrer"
        >
          <span class="relative text-lg font-semibold">{buttonText}</span>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2 transition-transform duration-300 group-hover:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
          </svg>
        </a>
      </div>
    </div>
  </div>
</section>
